extends layout.pug


block styles
    link(rel="stylesheet" href="/css/main.css")


block content
    form(action="/" method="post")
        label(for="name") Todo:
        input(class="input-todo" type="text" name="name")
        input(class="button" type="submit" value="+")
    ul
        each todo in todos
            li.todo
                input(type="checkbox") 
                span=todo.name
                -var delUrl = `/delete/${todo.name}`
                -var editUrl = `/edit-todo/${todo.name}`
                a(href=editUrl) Edit
                a(href=delUrl) X
                
